#!/bin/bash

if [ $# -eq 0 ]; then
    CONFIG="./configs/test/config.json"
else
    CONFIG="$1"
fi

mkdir -p ./src/pmserver/static
mkdir -p ./caches/

PYTHONPATH=src \
    python3 -u -m pymirror.pymirror\
    --config "$CONFIG" \
    --output_file="./src/pmserver/static/output.jpg" \
    --frame_buffer=null 