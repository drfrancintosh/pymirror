{
    "module": "web_api",
    "moddef": {
        "name": "newsapi.com",
        "position": "middle_right",
        "text_color": "#000000",
        "text_bg_color": "#c0c0c0",
        "font_name": "Roboto-Regular",
        "font_size": 24,
        "disabled": false
    },
    "web_api": {
        "cache_file": "./caches/news.json",
        "cache_timeout_secs": 840,
        "update_mins": 15,
        "cycle_seconds": 30,
        "url": "https://newsapi.org/v2/top-headlines",
        "params": {
            "apiKey": "$NEWSAPI_KEY",
            "country": "us",
            "pageSize": 10,
            "category": "business,health,science,technology"
        },
        "display": {
            "total": "{{payload.totalResults}}",
            "max": "10",
            "header": "{{_n_}}: {{payload.articles[_n_].title}}",
            "body": "{{payload.articles[_n_].description}}",
            "footer": "{{payload.articles[_n_].source.name}} @ {{ payload.articles[_n_].publishedAt.split('T')[0] }} -  {{ payload.articles[_n_].publishedAt.split('T')[1].replace('Z', '') }}"
        }
    },
    "card": {
        "header": {
            "font_name": "Roboto-Regular",
            "font_size": 32,
            "text_color": "#000",
            "text_bg_color": "#088",
            "valign": "top",
            "height": 72
        },
        "body": {
            "font_name": "Roboto-Regular",
            "font_size": 40,
            "text_color": "#0ff",
            "text_bg_color": "#000"
        },
        "footer": {
            "font_name": "Roboto-Regular",
            "font_size": 32,
            "text_color": "#000",
            "text_bg_color": "#088",
            "valign": "bottom",
            "height": 72
        }
    }
}