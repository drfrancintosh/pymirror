{
    "module": "web_api",
    "moddef": {
        "name": "newsapi.com",
        "position": "news_strip",
        "text_color": "#fff",
        "text_bg_color": "#000",
        "font_size": 24,
        "disabled": false,
        "force_render": true
    },
    "web_api": {
        "cache_file": "./caches/news.json",
        "poll_secs": 840,
        "cycle_seconds":15,
        "url": "https://newsapi.org/v2/top-headlines",
        "params": {
            "apiKey": "$NEWSAPI_KEY",
            "country": "us",
            "pageSize": 100,
            "category": "general"
        },
        "display": {
            "total": "{{ payload.totalResults }}",
            "max": "10",
            "body": "{{payload.articles[_n_].title.split(' - ')[0]}}",
            "header": "{{payload.articles[_n_].source.name}} @ {{ payload.articles[_n_].publishedAt.split('T')[0] }} -  {{ payload.articles[_n_].publishedAt.split('T')[1].replace('Z', '') }}"
        }
    },
    "card": {
        "header": {
            "font_name": "Roboto-Regular",
            "font_size": 32,
            "text_color": "#888",
            "text_bg_color": "#000",
            "valign": "bottom",
            "height": 40
        },
        "body": {
            "font_name": "Roboto-Regular",
            "font_size": 48,
            "text_color": "#fff",
            "text_bg_color": "#000",
            "valign": "top"
        }
    }
}
